<% @songs = @artist.songs.order(:album_id, :track_number)  %>
<div class="container-fluid col-md-10 col-md-offset-1">
  <% @songs.each do |song| %>
  <div class="col-md-3 col-md-offset-1 panel panel-primary">
    <div class="col-md-6"> <h5><%= song.name %></h5></div>
    <div class="col-md-6">
      <%= image_tag song.album.image , :class => "style_image"%>
    </div>
    <div class="col-md-9">
      Track <%= song.track_number %> on <%= song.album.name %>
    </div>
    <div class="text-right col-md-3"><%= link_to "Delete", artist_song_path(song.artist.id, song.id) , method: :delete %> </div>
  </div>
  <% end %>
  <div class="col-md-11 col-md-offset-1 top-buffer">
      <div class="text-left"><%= link_to "Add Song", new_artist_song_path(@artist.id) %></div>
    <div class="text-right"><%= link_to "Delete Artist", artist_path(@artist), method: :delete, data: {confirm: "Are you sure?"} %></div>
  </div>
</div>
