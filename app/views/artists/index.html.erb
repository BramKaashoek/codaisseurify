<div class="container-fluid col-md-10 col-md-offset-1">
  <% @artists.each do |artist| %>
  <div class="col-md-4 col-md-offset-1 panel panel-primary">
    <row>
      <div class = "col-md-6">
        <h1><%= link_to artist.name, artist %></h1>
      </div>
      <div class="col-md-6">
        <%= image_tag artist.artist_image.image, :class => "style_image" %>
      </div>
    </row>
    <row>
      <div class="col-md-5">
        <%= artist.country  %>
      </div>
      <div class="col-md-7 text-right">
        <%= artist.genre %>
      </div>
    </row>
  </div>
  <% end %>
</div>
