<div class="container-fluid col-md-10 col-md-offset-1">
  <div class = "row">
    <div class="btn-group">
      <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Sort by: <span class="caret"></span>
      </button>
      <ul class="dropdown-menu">
        <li> <%= link_to "Sort by name (Ascending)", artists_path(order: "name", direction: "ASC")  %></li>
        <li> <%= link_to "Sort by name (Descending)", artists_path(order: "name", direction: "DESC")  %></li>
        <li> <%= link_to "Sort by creation date (Ascending)", artists_path(order: "created_at" , direction: "ASC")  %></li>
        <li> <%= link_to "Sort by creation date (Descending)", artists_path(order: "created_at", direction: "DESC")  %></li>
      </ul>
    </div>
  </div>
  <% @artists.each do |artist| %>
  <div class="col-md-4 col-md-offset-1 panel panel-primary">
    <row>
      <div class = "col-md-6">
        <h1><%= link_to artist.name, artist %></h1>
      </div>
      <div class="col-md-6">
        <%= image_tag artist.image_url, class: "style_image" %>
      </div>
    </row>
    <row>
      <div class="col-md-5">
        <%= artist.country  %>
      </div>
      <div class="col-md-7 text-right">
        <%= artist.genre %>
      </div>
    </row>
  </div>
  <% end %>
</div>
